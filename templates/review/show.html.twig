{% extends 'base.html.twig' %}

{% block title %}Review{% endblock %}

{% block body %}

    <h1>Review</h1>

    <table>
        <tr>
            <th>Id</th>
            <td>{{ review.id }}</td>
        </tr>
        <tr>
            <th>Summary</th>
            <td>{{ review.summary }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ review.date ? review.date|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Shop</th>
            <td>{{ review.shop }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ review.price }}</td>
        </tr>
        <tr>
            <th>Stars</th>
            <td>{{ review.stars }}</td>
        </tr>
        <tr>
            <th>Public</th>
            <td>{{ review.public ? 'Yes' : 'No' }}</td>
        </tr>

    </table>

    <a href="{{ path('review_index') }}">back to list</a>

    <a href="{{ path('review_edit', {'id': review.id}) }}">edit</a>

    {% include 'review/_delete_form.html.twig' with {'identifier': review.id} only %}

{% endblock %}